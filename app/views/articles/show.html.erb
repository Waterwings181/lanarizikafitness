<div class="row" style="margin-top:40px;">
  <div class="large-12 columns">
    <h1 style="letter-spacing:0; margin-top:0;margin-bottom:0;">showing post</h1>
    <p id="notice"><%= notice %></p>
    
    <p>
      <strong>title:</strong>
      <%= @article.title %>
    </p>
    
    <p>
      <strong>content:</strong>
      <%= raw(@article.content) %>
    </p>
    
    <%= link_to 'Edit', edit_article_path(@article), :class => 'small button radius secondary' %>
    <%= link_to 'Back', articles_path, :class => 'small button radius secondary' %>
  </div>
</div>
